# Конфигурация базы данных
# Скопируйте этот файл в .env и настройте под свои параметры

# Хост базы данных
# Для docker-compose используйте имя сервиса (например: 'db')
# Для внешней БД используйте IP или доменное имя (например: '127.0.0.1' или 'host.docker.internal')
DB_HOST=host.docker.internal

# Имя базы данных
DB_NAME=csv

# Пользователь базы данных
DB_USER=root

# Пароль базы данных
DB_PASSWORD=root

# Кодировка подключения
DB_CHARSET=utf8mb4

# Постоянное подключение (true/false)
DB_PERSISTENT=true
